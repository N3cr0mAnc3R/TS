<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @*<script src="~/Scripts/modernizr-2.8.3.js"></script>*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Content/bootstrap.bundle.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/f-awesome.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Content/vue.js"></script>
    <script src="~/Content/loader.js"></script>
</head>
<body>
    <nav @*class="navbar navbar-expand-lg navbar-light bg-light"*@ class="navbar-system">
        <div class="container">
            <div class="base-nav">
                <a class="navbar-brand" href="/" id="nav-1"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse1" id="navbarSupportedContent">
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/auditory/list">Список аудиторий <span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
            <div class="nav-item">
                @if (!Request.IsAuthenticated)
                {
                    <a class="nav-link" href="/account/login" tabindex="-1" id="nav-2"></a>
                }
                else
                {
                    <a class="nav-link" href="/account/logout" tabindex="-1" id="nav-3"></a>
                }
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container" id="nav-4"></div>
        </footer>
    </div>
    <div class="localizationo-wrapper"><div class="localization-item" id="litem-1" onclick="setLocalization(1)">Ru</div><div id="litem-2" class="localization-item" onclick="setLocalization(2)">En</div></div>
    <script>
        window.onload = function () {
            GetLocalization();
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/account/IsAuthenticated',
                success: function (d) {
                    if (!d) {
                        if (localStorage['placeConfig'] && localStorage['placeConfig'].trim() != '') {
                            let flag = true;
                            if (window.location.pathname == '/user/waiting' || window.location.pathname == '/account/login') {
                                flag = false;
                            }
                            if (flag) {
                                //window.open('/user/waiting', '_self');
                            }
                        }
                        if (window.location.pathname == '/user/waiting' || window.location.pathname == '/account/login') {
                            return;
                        }
                        if (window.location.pathname == '/') {
                            window.open('/user/waiting', '_self');
                        }
                        //window.open('/user/waiting', '_self');
                    }
                }
            });
        }
        function setLocalization(Type) {
            Type = Type == 1 ? 'RU' : 'EN';
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/user/SetLocalization?Type=' + Type,
                success: function (s) {
                    GetLocalization();
                }
            });
        }
        function GetLocalization() {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/user/GetLocalization',
                success: function (l) {
                    if (l.Localization == 1) {
                        if (!$('#litem-1').hasClass('active')) { $('#litem-1').addClass('active'); }
                        $('#litem-2').removeClass('active');
                        app.localization = 1;
                    }
                    else {
                        if (!$('#litem-2').hasClass('active')) { $('#litem-2').addClass('active'); }
                        $('#litem-1').removeClass('active');
                        app.localization = 2;
                    }
                    switchLocal();
                }
            });
        }
        function switchLocal() {
            $('#nav-1').text(app.localization == 1 ? "Система тестирования СКФУ" : "NCFU Testing System");
            $('#nav-2').text(app.localization == 1 ? "Вход" : "Login");
            $('#nav-3').text(app.localization == 1 ? "Выход" : "Logout");
            $('#nav-4').text(app.localization == 1 ? "Все права защищены" : "All rights reserved");
            // case 2: return self.localization == 1 ? "Вы не завершили следующие тесты": "Not completed:";

        }
    </script>
</body>
</html>